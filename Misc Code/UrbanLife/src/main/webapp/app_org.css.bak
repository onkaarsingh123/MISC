//File Upload Changes
.upload-photo{
       margin-top: 34px;
}
.upload-photo h5{
       margin-top:0;
}
.upload-photo h5 a{
       color:#36a4d9;
}

.file-upd-icon{
       background:url("../images/sprites.png") no-repeat 0 0;
       padding:26px;
       display:inline-block;
       margin-left:16px;
}

.fileUpload {
       position: relative;
       overflow: hidden;
       margin: 10px;
}
.fileUpload input.upload {
       position: absolute;
       top: 0;
       right: 0;
       margin: 0;
       padding: 0;
       font-size: 10px;
       cursor: pointer;
       opacity: 0;
       filter: alpha(opacity=0);
       text-decoration: underline;
}

#upload{
       font-family: RobotoDraft,Roboto,'Helvetica Neue',sans-serif;
       font-size:12px;
       text-decoration: underline;
       color:#36a4d9;
       font-weight: bolder;
}
.upload-messages{
       margin-left:10px;
       margin-top:-5px;
       font-size:12px;
       color:#FF0000;
}

